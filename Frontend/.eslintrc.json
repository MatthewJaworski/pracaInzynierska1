{
  "extends": ["next/core-web-vitals", "next", "plugin:prettier/recommended"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto",
        "semi": true,
        "singleQuote": true,
        "trailingComma": "none"
      }
    ],
    "react-hooks/rules-of-hooks": "off" 
  }
}